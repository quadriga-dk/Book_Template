{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "tag:quadriga-dk.de,2025:quadriga",
    "title": "QUADRIGA OER",
    "description": "Eine OER, die nach dem QUADRIGA-Metadatenschema beschrieben wird.",
    "type": "object",
    "required": [
        "authors",
        "chapters",
        "context-of-creation",
        "date-of-last-change",
        "description",
        "discipline",
        "duration",
        "has-predecessor",
        "has-successor",
        "identifier",
        "learning-objectives",
        "oer-version",
        "publication-date",
        "schema-version",
        "target-group",
        "title",
        "type-of-research-object"
    ],
    "properties": {
        "authors": {
            "description": "Liste der Autor*innen der OER.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "$ref": "#/$defs/person"
            }
        },
        "chapters": {
            "description": "Liste der Kapitel.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "required": [
                    "title",
                    "description",
                    "learning-objectives"
                ],
                "properties": {
                    "title": {
                        "description": "Kapitelüberschrift",
                        "$ref": "#/$defs/multilingual-text"
                    },
                    "doi": {
                        "description": "DOI zum direkten Zitieren des Kapitels",
                        "type": "string",
                        "format": "uri"
                    },
                    "description": {
                        "description": "Beschreibung des Kapitelinhalts.",
                        "$ref": "#/$defs/multilingual-text"
                    },
                    "url": {
                        "description": "URL zum direkten Zugriff auf das Kapitel",
                        "type": "string",
                        "format": "uri"
                    },
                    "learning-objectives": {
                        "description": "Liste der Feinlernziele des Kapitels",
                        "$ref": "#/$defs/learning-objectives"
                    }
                }
            }
        },
        "context-of-creation": {
            "description": "Verweis auf QUADRIGA",
            "$ref": "#/$defs/multilingual-text"
        },
        "date-of-last-change": {
            "type": "string",
            "format": "date",
            "description": "Datum der letzten (großen, inhaltlich umfangreichen) Änderung. Sollte immer mit einer Versionsänderung einhergehen."
        },
        "description": {
            "description": "Beschreibung der OER",
            "type": "object",
            "required": [
                "introduction",
                "table-of-contents"
            ],
            "properties": {
                "introduction": {
                    "description": "Einleitung der OER",
                    "$ref": "#/$defs/multilingual-text"
                },
                "table-of-contents": {
                    "description": "Inhaltsverzeichnis der OER",
                    "$ref": "#/$defs/multilingual-text"
                }
            },
            "additionalProperties": false
        },
        "discipline": {
            "description": "Nennung der Disziplinen, die bei der Erstellung der OER im Fokus standen.",
            "type": "array",
            "minItems": 1,
            "maxItems": 5,
            "items": {
                "enum": [
                    "Verwaltungswissenschaften",
                    "Digital Humanities",
                    "Informatik",
                    "Informationswissenschaft",
                    "übergreifend"
                ]
            }
        },
        "duration": {
            "description": "Angedachte Bearbeitungsdauer für Lernende.",
            "type": "string",
            "format": "duration"
        },
        "git": {
            "description": "Git-Repositorium, in dem die OER-Inhalte zu finden sind.",
            "type": "string"
        },
        "has-predecessor": {
            "oneOf": [
                {
                    "enum": [
                        false
                    ]
                },
                {
                    "type": "string",
                    "format": "uri",
                    "description": "Link zum Vorgänger"
                }
            ]
        },
        "has-successor": {
            "oneOf": [
                {
                    "enum": [
                        false
                    ]
                },
                {
                    "type": "string",
                    "format": "uri",
                    "description": "Link zum Vorgänger"
                }
            ]
        },
        "identifier": {
            "description": "Eindeutiger Identifier in Form einer DOI. Die DOI identifiziert die gesamte OER.",
            "type": "string",
            "format": "uri"
        },
        "keywords": {
            "$comment": "TODO"
        },
        "learning-objectives": {
            "description": "Groblernziele der OER",
            "$ref": "#/$defs/learning-objectives"
        },
        "license": {
            "$comment": "TODO"
        },
        "oer-version": {
            "description": "Version der OER",
            "type": "string"
        },
        "prerequesites": {
            "$comment": "TODO"
        },
        "publication-date": {
            "type": "string",
            "format": "date"
        },
        "qm": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "person",
                    "date"
                ],
                "properties": {
                    "person": {
                        "$ref": "#/$defs/person"
                    },
                    "date": {
                        "type": "string",
                        "format": "date"
                    },
                    "description": {
                        "$ref": "#/$defs/multilingual-text"
                    }
                }
            }
        },
        "schema-version": {
            "description": "Versionsnummer des QUADRIGA-Metadatenschemas",
            "enum": [
                "1.1.0",
                "1.1.0b"
            ]
        },
        "target-group": {
            "description": "Zielgruppe",
            "type": "array",
            "minItems": 1,
            "items": {
                "enum": [
                    "Forschende (PostDoc)",
                    "Forschende (Projektleitung)",
                    "Promovierende",
                    "Hochschullehrende"
                ]
            }
        },
        "title": {
            "description": "Titel der OER",
            "type": "string"
        },
        "type-of-learning-resource": {
            "$comment": "TODO"
        },
        "type-of-research-object": {
            "description": "Nennung des Datentyps, der vorrangig in der OER behandelt wird.",
            "type": "array",
            "minItems": 1,
            "maxItems": 2,
            "items": {
                "enum": [
                    "Text",
                    "Tabelle",
                    "Bewegtes Bild",
                    "übergreifend"
                ]
            }
        },
        "url": {
            "description": "URL der gesamten OER",
            "type": "string",
            "format": "uri"
        },
        "used-tools": {
            "$comment": "TODO"
        }
    },
    "additionalProperties": false,
    "$defs": {
        "learning-objectives": {
            "description": "Eine Liste von Lernzielen.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "required": [
                    "learning-objective",
                    "competency",
                    "blooms-category"
                ],
                "properties": {
                    "learning-objective": {
                        "description": "Formulierung des Lernziels",
                        "$ref": "#/$defs/multilingual-text"
                    },
                    "competency": {
                        "description": "Im Lernziel adressierte Kompetenz nach dem QUADRIGA Datenkompetenzframework",
                        "type": "integer",
                        "inclusiveMinimum": "1",
                        "inclusiveMaximum": "15"
                    },
                    "blooms-category": {
                        "description": "Kategorie aus der Bloomschen Taxonomie.",
                        "enum": [
                            "1 Remember",
                            "2 Understand",
                            "3 Apply",
                            "4 Analyze",
                            "5 Evaluate",
                            "6 Create"
                        ]
                    }
                },
                "additionalProperties": false
            }
        },
        "multilingual-text": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "description": "Sollen Metadaten mehrsprachig definiert werden, so wird als Key der Sprachcode nach ISO639 Set 2 verwendet.",
                    "type": "object",
                    "patternProperties": {
                        "^[a-z][a-z][a-z]$": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                }
            ]
        },
        "person": {
            "oneOf": [
                {
                    "type": "string",
                    "description": "Vollständiger Name der Person"
                },
                {
                    "description": "Strukturierte Angabe der Person bestehend mindestens aus Vor- und Nachname",
                    "$comment": "Andere Schlüssel können nach Bedarf angelegt werden.",
                    "type": "object",
                    "required": [
                        "firstname",
                        "lastname"
                    ],
                    "properties": {
                        "firstname": {
                            "type": "string"
                        },
                        "lastname": {
                            "type": "string"
                        },
                        "orcid": {
                            "description": "ORCID der Autor*in",
                            "type": "string"
                        }
                    },
                    "additionalProperties": true
                }
            ]
        }
    }
}